{
  "title": "Security Monitoring",
  "uid": "security-monitoring",
  "editable": true,
  "graphTooltip": 1,
  "panels": [
    {
      "id": 1,
      "title": "Authentication Failure Rate",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 0.05,
                "color": "yellow"
              },
              {
                "value": 0.1,
                "color": "red"
              }
            ]
          }
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(webstore_auth_failures_total[5m]) / rate(webstore_auth_attempts_total[5m])",
          "legendFormat": "{{reason}}"
        }
      ],
      "description": "Authentication failure rate by reason (should be <5%)"
    },
    {
      "id": 2,
      "title": "Rate Limit Violations",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 1,
                "color": "yellow"
              },
              {
                "value": 5,
                "color": "red"
              }
            ]
          }
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (endpoint) (rate(webstore_rate_limit_exceeded_total[5m]))",
          "legendFormat": "{{endpoint}}"
        }
      ],
      "description": "Rate limit violations by endpoint"
    },
    {
      "id": 3,
      "title": "Suspicious Activity Detections",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "drawStyle": "bars"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 1,
                "color": "orange"
              },
              {
                "value": 5,
                "color": "red"
              }
            ]
          }
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (type) (increase(webstore_security_suspicious_activity_total[5m]))",
          "legendFormat": "{{type}}"
        }
      ],
      "description": "Suspicious activity by type: credential_stuffing, endpoint_scanning, abuse"
    },
    {
      "id": 4,
      "title": "Auth Failures by Reason",
      "type": "piechart",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (reason) (increase(webstore_auth_failures_total[1h]))",
          "legendFormat": "{{reason}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        }
      },
      "description": "Distribution of auth failures in last hour"
    },
    {
      "id": 5,
      "title": "Failed Auth Attempts (Last Hour)",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 16
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 50,
                "color": "yellow"
              },
              {
                "value": 200,
                "color": "red"
              }
            ]
          }
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(webstore_auth_failures_total[1h]))",
          "instant": true
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "background"
      }
    },
    {
      "id": 6,
      "title": "Rate Limits Hit (Last Hour)",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 16
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 10,
                "color": "yellow"
              },
              {
                "value": 50,
                "color": "red"
              }
            ]
          }
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(webstore_rate_limit_exceeded_total[1h]))",
          "instant": true
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "background"
      }
    },
    {
      "id": 7,
      "title": "Suspicious IPs (Last Hour)",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 16
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 1,
                "color": "yellow"
              },
              {
                "value": 5,
                "color": "red"
              }
            ]
          }
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "count(sum by (client_ip) (increase(webstore_security_suspicious_activity_total[1h])))",
          "instant": true
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "background"
      }
    },
    {
      "id": 8,
      "title": "Authentication Success Rate",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 16
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "red"
              },
              {
                "value": 0.9,
                "color": "yellow"
              },
              {
                "value": 0.95,
                "color": "green"
              }
            ]
          }
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "1 - (rate(webstore_auth_failures_total[5m]) / rate(webstore_auth_attempts_total[5m]))",
          "instant": true
        }
      ],
      "options": {
        "graphMode": "none",
        "colorMode": "background"
      }
    },
    {
      "id": 9,
      "title": "Top IPs by Failed Auths",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 20
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, sum by (client_ip) (increase(webstore_auth_failures_total[1h])))",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "client_ip": "IP Address",
              "Value": "Failed Attempts (1h)"
            }
          }
        }
      ]
    },
    {
      "id": 10,
      "title": "Top IPs by Rate Limit Violations",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 20
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, sum by (client_ip) (increase(webstore_rate_limit_exceeded_total[1h])))",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "client_ip": "IP Address",
              "Value": "Violations (1h)"
            }
          }
        }
      ]
    }
  ],
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "10s",
      "30s",
      "1m",
      "5m"
    ]
  }
}